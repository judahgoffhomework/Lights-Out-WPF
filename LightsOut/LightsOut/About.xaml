<Window x:Class="LightsOut.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightsOut"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800">
    <StackPanel>
        <Label Content="Lights Out" HorizontalAlignment="Center"/>
        <Label Content="Created by Judah Goff" HorizontalAlignment="Center"/>
        <Image Stretch="Fill" Source="lightbulb.ico" VerticalAlignment="Center" HorizontalAlignment="Center" Height="160" Margin="308,0,314,0" Width="170" />
        <Label Content="Win the game by making the entire grid black!" HorizontalAlignment="Center" Height="48"></Label>
        <Button Content="OK" Margin="140,0" Click="Button_Click"/>
    </StackPanel>
</Window>
